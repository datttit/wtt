        function getDanhMuc(x) {
            if (x.value !== "") {
                $('input#ViTriLinhVuc').empty();
                //alert(id.value);
                var _id = x.value;
                $.ajax({
                    url: '@Url.Action("SetPositionLinhVucHoiDapMoi", "HoiDaps")',
                    type: "POST",
                    async: true,
                    cache: false,
                    dataType: "json",
                    data: { id: _id },
                    success: function (data) {
                        console.log(data);
