@model List<WebTinTuc.Models.LienKet>
<style>
    #module-lienkethinhanh1 > ul > li {
        height: 85px;
        margin-bottom: 5px;
    }

    #module-lienkethinhanh1 > ul > li:last-child{
        margin-bottom: 0;
    }

    #module-lienkethinhanh1 > ul > li > a > img {
        width: 100%;
        height: 100%;
    }

</style>
@if (Model.Count > 0)
{
    <div id="module-lienkethinhanh1">
        <ul style="list-style-type: none; padding-left: 0; margin-bottom: 0;">
            @foreach (var item in Model)
            {
                <li>
                    <a href="@item.LienKetUrl" target="@item.Target">
                        <img src="@item.ImageUrl" alt="@item.LienKetName" class="img-responsive" />
                    </a>
                </li>
            }
        </ul>
    </div>
}
else
{
    <span>Không có liên kết</span>
}
