@model WebTinTuc.Models.Config
@{
    ViewBag.Title = "Cấu hình hệ thống";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section styles {
    @Styles.Render("~/Content/dropzonescss")
}

<script src="~/Content/ckeditor/ckeditor.js"></script>
<div class="row">
    <div class="col-lg-12">
        <div class="page-header">
            <h3>@ViewBag.Title</h3>
        </div>
        @if (TempData["Updated"] != null)
        {
            <div class="alert alert-success alert-dismissible fade in" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                @Html.Raw(TempData["Updated"])
            </div>
        }

    </div>
</div>

@if (Model != null)
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default box box-primary">
                <div class="panel-heading">
                    <h3>Cập nhật <b>Cấu hình hệ thống</b></h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("UpdateConfig", "Config", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", role = "form", @id = "UpdateConfig", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(m => m.ConfigId)
                        <div class="form-group">
                            @Html.Label("Tiêu đề cổng", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.PageTitle, htmlAttributes: new { @class = "form-control" })
                                @*@Html.ValidationMessageFor(model => model.PageTitle, "", new { @class = "text-danger" })*@
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Mô tả cổng", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.PageDescription, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Màu nền Header", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.BgColorHeader, htmlAttributes: new { @class = "form-control" })
                                <input type="color" name="get_color_header" id="get_color_header" value="@Model.BgColorHeader" />
                            </div>
                        </div>

                        <script>
                            $(document).ready(function () {
                                $('#get_color_header').on('change', function () {
                                    $('input#BgColorHeader').val($(this).val());
                                })
                            })
                        </script>

                        <div class="form-group">
                            @Html.Label("Ảnh Header", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.BgImageHeader, htmlAttributes: new { @class = "form-control" })
                                <img id="img_BgImageHeader" class="img-responsive" src="@Model.BgImageHeader" />
                            </div>
                        </div>
                        <script>
                            $(document).ready(function () {
                                $('#BgImageHeader').on('change', function () {
                                    $('img#img_BgImageHeader').attr('src', $(this).val());
                                })
                            })
                        </script>

                        <div class="form-group">
                            @Html.Label("Màu panel", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.BgColorPanel, htmlAttributes: new { @class = "form-control" })
                                <input type="color" name="get_color_panel" id="get_color_panel" value="@Model.BgColorPanel" />
                            </div>
                        </div>

                        <script>
                            $(document).ready(function () {
                                $('#get_color_panel').on('change', function () {
                                    $('input#BgColorPanel').val($(this).val());
                                })
                            })
                        </script>

                        <div class="form-group">
                            @Html.Label("Ảnh panel", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.BgImagePanel, htmlAttributes: new { @class = "form-control" })
                                <img id="img_BgImagePanel" class="img-responsive" src="@Model.BgImagePanel" />
                            </div>
                        </div>

                        <script>
                            $(document).ready(function () {
                                $('#BgImagePanel').on('change', function () {
                                    $('img#img_BgImagePanel').attr('src', $(this).val());
                                })
                            })
                        </script>

                        <div class="form-group">
                            @Html.Label("Màu Footer", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.BgColorFooter, htmlAttributes: new { @class = "form-control" })
                                <input type="color" name="get_color_footer" id="get_color_footer" value="@Model.BgColorFooter" />
                            </div>
                        </div>

                        <script>
                            $(document).ready(function () {
                                $('#get_color_footer').on('change', function () {
                                    $('input#BgColorFooter').val($(this).val());
                                })
                            })
                        </script>

                        <div class="form-group">
                            @Html.Label("Ảnh nền Footer", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.BgImageFooter, htmlAttributes: new { @class = "form-control" })
                                <img id="img_BgImageFooter" class="img-responsive" src="@Model.BgImageFooter" />
                            </div>
                        </div>

                        <script>
                            $(document).ready(function () {
                                $('#BgImageFooter').on('change', function () {
                                    $('img#img_BgImageFooter').attr('src', $(this).val());
                                })
                            })
                        </script>

                        <div class="form-group">
                            <div class="col-md-12">
                                <label>Cập nhật nội dung Footer</label>
                                @Html.TextAreaFor(m => m.FooterContent, new { @class = "form-control", rows = 15, autocomplete = "off" })
                            </div>
                        </div>

                        <script> 
                            $(window).on('load', function () {
                                CKEDITOR.replace('FooterContent');
                            })
                            
                        </script>


                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-primary" value="Cập nhật Hệ thống" />
                                <a href="/admin" class="btn btn-default">Không cập nhật</a>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Tải file</label>
                            <div class="col-md-8">
                                <div id="dZUpload" class="dropzone">
                                    <div class="dz-default dz-message" data-dz-message>
                                            <span>Kéo tệp vào hoặc chọn tệp cần tải lên</span>
                                            <span class="btn btn-primary">Chọn file</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-8">
                                <div id="link_url">
                                </div>
                            </div>
                        </div>

                    }




                </div>
            </div>
        </div>
    </div>



}
else
{
    <span>Không tìm thấy cấu hình hệ thống nào.</span>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/dropzonescripts")
    <script type="text/javascript">
        $.validator.setDefaults({
            ignore: ""
        });
    </script>

    <script>
        $(document).ready(function () {
            Dropzone.autoDiscover = false;
            $("#dZUpload").dropzone({
                url: "/Config/SaveUploadedFile",
                addRemoveLinks: true,
                maxFiles: 3,
                maxFilesize: 10,
                uploadMultiple: true,
                acceptedFiles: "image/*",
                dictFallbackMessage: "Trình duyệt của bạn không hỗ trợ kéo thả tệp để tải lên.",
                dictFallbackText: "Please use the fallback form below to upload your files like in the olden days.",
                dictFileTooBig: "Tệp có dung lượng quá lớn ({{filesize}}MiB). Dung lượng cho phép: {{maxFilesize}}MiB.",
                dictInvalidFileType: "Tệp bạn chọn không được phép tải lên.",
                dictResponseError: "Server responded with {{statusCode}} code.",
                dictCancelUpload: "Hủy tải lên",
                dictCancelUploadConfirmation: "Bạn chắc chắn muốn hủy tải lên?",
                dictRemoveFile: "Loại bỏ tệp tin",
                dictMaxFilesExceeded: "Bạn không thể tải lên nhiều tệp.",
                success: function (file, response) {
                    var imgName = response.Message;
                    file.previewElement.classList.add("dz-success");
                    $('#link_url').html(imgName);
                },
                error: function (file, response) {
                    file.previewElement.classList.add("dz-error");
                    $(file.previewElement).find('.dz-error-message').text(response);
                }
            });
        });
    </script>
}