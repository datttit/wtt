        $(document).ready(function () {
            $('input#DetailName').on('change', function () {
                var $val = $(this).val();
                var $output = $('input#DetailSlug');
                $output.empty();
                if ($val !== "" && $val.length > 0) {
                    $.ajax({
                        url: '@Url.Action("GenerateSlugUrl", "Admin")',
                        type: "POST",
                        async: true,
                        cache: false,
                        dataType: "json",
                        data: { strText: $val },
                        success: function (data) {
                            $output.val(data);
                        },
                        error: function (error) {
                            alert('Mất kết nối tới máy chủ');
                        }
                    })
                }
            });

           

        })



