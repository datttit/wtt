@model WebTinTuc.Models.Category
@{
    ViewBag.Title = "Xóa danh mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="page-header">
            <h3>@ViewBag.Title</h3>
        </div>
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade in" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                @Html.Raw(TempData["Error"])
            </div>
        }
    </div>
</div>

@if (Model != null)
{

    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default box box-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Bạn chắc chắn muốn xóa danh mục <b>@Html.DisplayFor(m => m.CategoryName)?</b></h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <input type="submit" class="btn btn-primary" value="Xóa danh mục" />
                        <a href="/admin/categories" class="btn btn-danger">Hủy xóa</a>
                    }
                </div>
            </div>
        </div>
    </div>

}
else
{
    <span>Không tìm thấy danh mục</span>
}
