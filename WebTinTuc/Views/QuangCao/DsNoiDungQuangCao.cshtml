@model WebTinTuc.Models.Adv
@{
    ViewBag.Title = "Danh sách nội dung quảng cáo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="page-header">
            <h3>@ViewBag.Title</h3>
        </div>

    </div>
</div>

@if (Model != null)
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default box box-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        <h3>@Model.AdvTitle <a href="/QuangCao/ThemNoiDungQuangCao" class="btn btn-primary pull-right">Thêm nội dung</a></h3>
                    </div>
                </div>
                <div class="panel-body">
                    @if (Model.AdvContents.Count > 0)
	                {
		                <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Số thứ tự</th>
                                        <th>ảnh</th>
                                        <th>Link</th>
                                        <th>Target</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int i = 1;}
                                    @foreach (var item in Model.AdvContents)
                                    {
                                        <tr>
                                            <td>@i</td>
                                            <td><img width="100" height="60" src="@item.ImgUrl" /></td>
                                            <td>@item.Link</td>
                                            <td>@item.Target</td>
                                            <td>
                                                @Html.ActionLink("Sửa", "SuaNoiDungQC", new { id = item.AdvContentId }) |
                                                @Html.ActionLink("Xóa", "XoaNoiDungQC", new { id = item.AdvContentId }) |
                                            </td>
                                        </tr>
                                        i++;
                                    }
                                </tbody>
                            </table>
                        </div>
	                }else
	                {
                        <span>Quảng cáo chưa có nội dung.</span> 
	                }
                </div>
            </div>
        </div>
    </div>
}
else
{
    <span>Không tìm thấy quảng cáo.</span>
}
