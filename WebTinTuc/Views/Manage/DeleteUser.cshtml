@model WebTinTuc.Models.ManageUserDeleteModel
@{
    ViewBag.Title = "Xóa người dùng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="page-header">
            <h3><i class="fa fa-user fa-2x fa-color-red"></i> @ViewBag.Title</h3>
        </div>
    </div>

    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default box box-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Bạn chắc chắn muốn xóa tài khoản của <b>@Html.DisplayFor(m => m.FullName)</b></h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" class="btn btn-primary" value="Xóa người dùng" />
                    <a href="/Manage/ManageUsers" class="btn btn-danger">Hủy xóa</a>
                }
            </div>
        </div>
    </div>
</div>

