@model IEnumerable<WebTinTuc.Models.Category>

@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <div class="panel panel-default panel-home">
            <div class="panel-heading">
                <h3 class="panel-title">@item.CategoryName <a href="@string.Format("/tin-tuc/{0}-{1}", @item.SlugCategory, @item.CategoryId)" class="pull-right">Xem tất cả</a></h3>
            </div>
            <div class="panel-body">
                @{Html.RenderAction("ArticleNew", new { id = @item.CategoryId });}
                @{Html.RenderAction("ListArticlesNew", new { id = @item.CategoryId });}
            </div>
        </div>
    }
}
