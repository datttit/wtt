@model IEnumerable<WebTinTuc.Models.Article>
<div class="panel-listnewscat-0">
    <div class="col-md-12">
        @if (Model.Count() > 0)
        {

            <h3>Các tin nổi bật khác</h3>
            <ul>
                @foreach (var item in Model)
                {
                    <li><a href="@string.Format("/bai-viet/{0}-{1}", @item.SlugArticleTitle, @item.ArticleId)">@item.ArticleTitle <span class="font-itali">(@string.Format("{0:dd/MM/yyyy HH:mm tt}", @item.PublishedDate))</span></a></li>
                }
            </ul>

        }
        else
        {
            <p>Chưa có bài viết</p>
        }
    </div>
</div>
