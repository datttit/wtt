@model List<WebTinTuc.Models.LinhVuc>

@if (Model != null)
{
    if (Model.Count > 0)
    {
        <select name="LinhVucId" class="form-control" id="LinhVucId">
            <option value="">--Chọn lĩnh vực giao dịch--</option>
            @foreach (var item in Model)
            {
                <option value="@item.LinhVucId">@item.TenLinhVuc</option>
            }
        </select>
    }
    else
    {
        <select name="LinhVucId" class="form-control" id="LinhVucId">
            <option value="">--Chọn lĩnh vực giao dịch--</option>
        </select>
    }
}
